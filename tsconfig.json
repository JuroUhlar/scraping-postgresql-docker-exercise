{
    "compilerOptions": {
      "target": "esnext",
      "module": "commonjs", 
      "rootDir": "./src",       
      "declaration": false,                         
      "outDir": "./dist",                             
      "esModuleInterop": true,                            
      "forceConsistentCasingInFileNames": true,            
      "strict": true,                                  
      "noImplicitAny": true,                        
      "strictNullChecks": true,                   
      "strictFunctionTypes": true,                  
      "skipLibCheck": true                 
    },
    "include": ["src"]
  }