{
    "compilerOptions": {
      "target": "esnext",
      "module": "esnext", 
      "moduleResolution": "node",
      "rootDir": "./",
      "baseUrl": ".",       
      "declaration": false,                         
      "outDir": "./dist",                             
      "esModuleInterop": true,                            
      "forceConsistentCasingInFileNames": true,            
      "strict": true,                                  
      "noImplicitAny": true,                        
      "strictNullChecks": true,                   
      "strictFunctionTypes": true,                  
      "skipLibCheck": true                 
    },
    "include": ["src", "cypress"]
  }